#include <stdio.h>
#include <math.h>
#include <locale.h>
#define _CRT_SECURE_NO_WARNINGS

int main() {
    double x1, y1, r1;
    double x2, y2, r2;
    double distance;
    setlocale(LC_ALL, "Rus");
    // первая окружность
    printf("Введите координаты центра первой окружности (x1, y1) и радиус r1: ");
    scanf_s("%lf %lf %lf", &x1, &y1, &r1);

    // вторая окружность
    printf("Введите координаты центра второй окружности (x2, y2) и радиус r2: ");
    scanf_s("%lf %lf %lf", &x2, &y2, &r2);

    // расстояние
    distance = sqrt(pow(x1 - x2, 2) + pow(y1 - y2, 2));

    if (distance > (r1 + r2)) {
        printf("Окружности не пересекаются (разделены).\n");
    }
    else if (distance == (r1 + r2)) {
        printf("Окружности касаются друг друга (внешнее касание).\n");
    }
    else if (distance < (r1 + r2) && distance > fabs(r1 - r2)) {
        printf("Окружности пересекаются.\n");
    }
    else if (distance == fabs(r1 - r2)) {
        printf("Окружности касаются друг друга (внутреннее касание).\n");
    }
    else {
        printf("Одна окружность находится внутри другой, не касаясь.\n");
    }

    return 0;
}
